<mpc:BaseMetroWindow x:Class="mpESKD.Base.Properties.PaletteSettings"
                     xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                     xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                     xmlns:mpc="clr-namespace:ModPlusAPI.Windows.Mpc;assembly=ModPlusAPI"
                     SizeToContent="WidthAndHeight" KeyDown="LmSettings_OnKeyDown" ResizeMode="NoResize">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/ModPlusAPI;component/Windows/WinResources/Styles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <XmlDataProvider x:Key="Lang" Source="E:/ModPlus/Languages/en-US.xml" XPath="ModPlus/mpESKD" />
        </ResourceDictionary>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <CheckBox Name="ChkAutoLoad" Grid.Row="0" VerticalAlignment="Center"
                  Content="{Binding Source={StaticResource Lang}, XPath=h2}"
                  Checked="ChkAutoLoad_OnChecked_OnUnchecked"
                  Unchecked="ChkAutoLoad_OnChecked_OnUnchecked"/>
        <CheckBox Name="ChkAddToMpPalette" Grid.Row="1" VerticalAlignment="Center"
                  Content="{Binding Source={StaticResource Lang}, XPath=h3}"
                  Checked="ChkAddToMpPalette_OnChecked_OnUnchecked"
                  Unchecked="ChkAddToMpPalette_OnChecked_OnUnchecked"/>
        <Button Name="BtClose" Grid.Row="5"
                HorizontalAlignment="Center"
                Content="{Binding Source={StaticResource Lang}, XPath=close}"
                Click="BtClose_OnClick"/>
    </Grid>
</mpc:BaseMetroWindow>

